    print("Majeur")
else:
    print("mineur")

# 7demande à l’utilisateur de saisir 3 nombre x, y et z et de lui afficher leur maximum
z = input("entrez une valeur z : ")
y = input("entrez une valeur y : ")
x = input("entrez une valeur x : ")
mx = max(z,y,x)
print("le max des 3 valeur est:", mx)

#8 demande à l’utilisateur de saisir un nombre entier n et de lui afficher n !
#/ n = int(input("entrez une valeur n : "))
# som= 0
# som = (1+n+1)
# print ("le tatal est:", som)
n = int(input("entrez une valeur n : "))
som= 0
for i in range(1,n+1):
    som = som + i
print ("la somme 1+2+3+...+",n,"= : ",som)

#9 afficher le nombre u

u= int(input("entre un nombre u"))
j=0
for i in range(1,u+1):
    j = j*i
    print("fact de u est :",u," = :",j)

#10 aire d'un cercle / rayon
import math
rayon = int(input("rayon= :"))
aire = math.pi * rayon * rayon;
circonference = 2 * math.pi * rayon;
diametre = 2*rayon;
print("le diametre =", diametre)
print("aire d'un cercle =", aire)
print("circonference est = :", circonference)
print("le rayon =", rayon)

