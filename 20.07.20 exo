#12table de multiplication
#a
nbs = int(input("entrez nombre nbs "))
print("table de multiplication de :",nbs," est:")
for i in range(1,10):
    print(i, " x ",nbs," = ",i*nbs)
#b
for nbs in range(1,10):
    print(',')
    print("la table de M:",nbs,"est:")
    for i in range(1,10):
        print(i, " x.",nbs," = ", i*nbs)
        
#13 definir A & B et les diviser %
g = int(input("valeur g : "))
h = int(input("valeur h : "))
q = g//h
r = g%h
print("le resultat de la division est: q =",q)
print("reste: r =",r)

